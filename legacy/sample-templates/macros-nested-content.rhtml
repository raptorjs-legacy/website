<c:template xmlns:c="core">

    <style>.section { border: 1px solid Black; margin: 5px; padding: 5px; }</style>
    
    <c:def function="section(title,url,body)" body-param="body">
        <div class="section">
            <h2>
                <a href="$url">$title</a>
            </h2>
            <p>$body</p>
        </div>
    </c:def>
    
    <c:invoke function="section" 
        title="Neil Armstrong" 
        url="http://en.wikipedia.org/wiki/Neil_Armstrong">

        American astronaut and the first person to walk on the Moon

    </c:invoke>
    
    <c:invoke function="section" 
        title="Ernest Hemingway" 
        url="http://en.wikipedia.org/wiki/Hemingway">

        American author and journalist.
        
    </c:invoke>
    
</c:template>