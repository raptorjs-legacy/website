<c:template
    xmlns:c="core"
    xmlns:w="widgets"
    name="components/overlays/Popover"
    params="tag,rootAttrs,linkText">
    
    <span w:widget="components.overlays.Popover.PopoverWidget" c:attrs="rootAttrs" class="popover-target">
        <c:if test="linkText">$linkText</c:if>
        <c:invoke function="tag.invokeBody()" c:else-if="tag.invokeBody"/>
    </span>
</c:template>